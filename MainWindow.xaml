<Window x:Class="FlightSimulator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Flight Simulator" Height="600" Width="800">
    <Grid>
        <Canvas Name="RadarCanvas" Background="Black" Margin="0"/>
        <TextBlock Name="InfoTextBlock" VerticalAlignment="Top" HorizontalAlignment="Left"
                   Margin="10" FontSize="16" Foreground="White"/>
        <Button Content="Start Simulation" VerticalAlignment="Bottom"
                HorizontalAlignment="Center" Margin="10" Click="StartSimulation_Click"/>
    </Grid>
</Window>
